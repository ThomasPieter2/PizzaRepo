@model IEnumerable<PizzaReservation.Models.Size>

@{
    ViewData["Title"] = "Index";
}

<h1>Sizes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diameter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Diameter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SizeId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SizeId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SizeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
