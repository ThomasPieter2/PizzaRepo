@model IEnumerable<PizzaReservation.Models.Pizza>

@{
    ViewData["Title"] = "Index";
}

<h1>Pizza's</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PizzaSizes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PizzaToppings)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageUrl" alt="@item.Name" style="max-height: 50px; max-width:50px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <ul>
                        @foreach (var ps in item.PizzaSizes)
                        {
                            <li>@Html.DisplayFor(modelItem => ps.Size.Name)</li>
                        }
                    </ul>
                </td>
                <td>
                    <ul>
                        @foreach (var pt in item.PizzaToppings)
                        {
                            <li>@Html.DisplayFor(modelItem => pt.Topping.Name)</li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PizzaId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PizzaId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PizzaId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
