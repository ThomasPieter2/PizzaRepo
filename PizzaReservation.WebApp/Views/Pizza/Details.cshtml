@model PizzaReservation.WebApp.ViewModels.PizzaVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Pizza</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.ImageUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.PizzaSizes)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <ul>
                                @foreach (var s in Model.SelectedSizes)
                                {
                                    <li>@Html.ValueFor(model => s.Name)</li>
                                }
                            </ul>
                        </td>
                    </tr>
                </tbody>
            </table>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.PizzaToppings)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <ul>
                                @foreach (var t in Model.SelectedToppings)
                                {
                                    <li>@Html.ValueFor(model => t.Name)</li>
                                }
                            </ul>
                        </td>
                    </tr>
                </tbody>
            </table>
        </dd>
        @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.PizzaToppings)
        </dt>
        <dd class="col-sm-10">
            @foreach (var t in Model.SelectedToppings)
            {
                @Html.ValueFor(model => t.Name)
            }
        </dd>*@
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Pizza.PizzaId">Edit</a> |
